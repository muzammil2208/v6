<%- include('../partials/header'); -%>
<div class="container">
    <div class="row">
        <div style="margin:10% auto;">
                <h1>Sign Up</h1>
                <form action="/register" method="POST">
                    <div class="row form-group">
                        <div class="col">
                            <label for="Firstname" class="form-group">First name</label>
                          <input type="text" class="form-control" name="firstname" placeholder="First name">
                        </div>
                        <div class="col">
                            <label for="Lastname" class="form-group">Last name</label>
                          <input type="text" class="form-control"  name="lastname" placeholder="Last name">
                        </div>
                    </div>
                    <label for="Avatar" class="form-group">Avatar link</label>
                    <div class="form-group">
                        <input type="text" class="form-control" name="avatar" placeholder="avatar link">
                    </div>

                    <label for="Email" class="form-group">Email</label>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="enter your Email">
                    </div>

                    <label for="Username" class="form-group">Username</label>
                    <div class="form-group">
                        <input type="text" class="form-control" name="username" placeholder="username">
                    </div>
                    <label for="Username" class="form-group">Password</label>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="enter your password">
                    </div>
                    <label for="admin code" class="form-group">Admin code</label>
                    <div class="form-group">
                        <input type="password" class="form-control" name="admincode" placeholder="Enter if only you are admin ">
                    </div>
                    
                    <div class="form-group">
                        <button class="btn btn-primary btn-large btn-block form-control">submit</button>
                    </div>

                </form>
                <a href="/campground">Go back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer'); -%>































