<%- include('../partials/header'); -%>
<div class="container">
    <div class="row">
        <div style="margin:10% auto;">
        <h1 class="col-12">Create a new campground</h1>
       
        <form action="/campground" method="post" enctype="multipart/form-data">
                <label for="Name" class="form-group"> Name</label>
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="enter the name">
                </div>
                <label for="Price" class="form-group"> Price($)</label>
                <div class="form-group">
                    <input type="number" class="form-control" name="price" placeholder="enter the price" min="0.01" step="0.01">
                </div>
                <label for="image" class="form-group">Image</label>
                <div class="form-group">
              
                    <input type="file" id="image" name="image" accept="image/*" required>
                </div>
                <label for="description" class="form-group"> Description</label>
                <div class="form-group"> 
                    <input type="text" class="form-control" name='description' placeholder="enter the description">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-large btn-block form-control">submit</button>
                </div>
                
        </form>
        <a href="/campground">Go back</a>
    </div>
       
    </div>
</div>
<%- include('../partials/footer'); -%>