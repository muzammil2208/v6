<%- include('../partials/header'); -%>
<div class="container">
    <div class="row">
        <div style="margin:10% auto;">
        <h1 class="col-12">Edit <%=campground.name%> campground</h1>
       
        <form action="/campground/<%= campground._id %>?_method=PUT" method="post" style="margin:20px 0;" enctype="multipart/form-data">
                <label for="Name" class=form-group> Name</label>
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[name]" value=<%= campground.name %>>
                </div>
                <label for="Price" class=form-group> Price</label>
                <div class="form-group">
                    <input type="number" class="form-control" name="campground[price]" value= <%= campground.price %> min="0.01" step="0.01">
                </div>
                <label for="image" class="form-group">Image</label>
                <div class="form-group">
                    <input type="file" id="image" name="campground[image]" accept="image/*">
                </div>
                <label for="description" class=form-group> Description</label>
                <div class="form-group"> 
                    <input type="text" class="form-control" name='campground[description]' value=<%= campground.description %>>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value=<%= campground.location %>>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-large btn-block form-control">submit</button>
                </div>
                
        </form>
        <a href="/campground">Go back</a>
    </div>
       
    </div>
</div>
<%- include('../partials/footer'); -%>